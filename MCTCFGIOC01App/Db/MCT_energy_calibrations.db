# Ru/C stripe calculations
record(calcout,"$(P)MONO01_RUC_CALC") {
    field(DESC, "DMM Ru/C stripe energy true->MCT")
    field(INPA, "$(P)MONO01_RUC_TRUE_E_SP CPP")
    field(INPB, "1.105")
    field(INPC, "-0.584")
    field(CALC, "A*B+C")
    field(PREC, "3")
    field(OUT,  "$(P)MONO01_RUC_MCT_E_SP PP")
}

record(ai, "$(P)MONO01_RUC_TRUE_E_SP") {
    field(DESC, "DMM Ru/C true energy SP")
    field(EGU,  "keV")
    field(PREC, "3")
    field(INP,  "$(P)ENERGY_SP CPP")
}
record(ai, "$(P)MONO01_RUC_MCT_E_SP") {
    field(DESC, "DMM Ru/C MCT energy SP")
    field(EGU,  "keV")
    field(PREC, "3")
}

