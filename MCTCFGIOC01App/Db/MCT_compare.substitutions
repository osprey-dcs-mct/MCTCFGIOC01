#Save/compare motor positions
#PV - motor record PV name
#The template creates _$(PV)_CFG_STS for status monitoring
file "db/MCT_motor_compare.template"
{
pattern
{PV}
{"MCTMONO01MOT06"}
{"MCTMONO01MOT07"}
{"MCTMONO01MOT03"}
{"MCTVBM01:PITCH"}
{"MCTSLT01:HSIZE"}
{"MCTSLT01:VSIZE"}
{"MCTSLT01:HCENTRE"}
{"MCTSLT01:VCENTRE"}
{"MCTSLT02:HSIZE"}
{"MCTSLT02:VSIZE"}
{"MCTSLT02:HCENTRE"}
{"MCTSLT02:VCENTRE"}
{"MCTSLT03:HSIZE"}
{"MCTSLT03:VSIZE"}
{"MCTSLT03:HCENTRE"}
{"MCTSLT03:VCENTRE"}
}

#Save/compare generic pv
#PV - PV name to compare
#TOL - tolerance to compare
#The template creates _$(PV)_CFG_STS for status monitoring
file "db/MCT_pv_compare.template"
{
pattern
{PV,                            TOL}
{"MCTCFG01:TABLE_SELECT",       "0.1"}
{"MCTMONO01:STRIPE_REQUEST_CMD","0.1"}
}

#Save/compare component status
#COMPONENT - New PV with component status in the format $(COMPONENT)CFG_STS
#STS1-STS4 - Input links to monitor, any input set to 1 will trigger the component status alarm (empty macros are ignored!)
file "db/MCT_component_compare.template"
{
pattern
{COMPONENT,     
STS1,                       
STS2,                       
STS3,                       
STS4,
STS5,
STS6}
{"MCTMONO01:",   
"MCTMONO01MOT06_CFG_STS CP",   
"MCTMONO01MOT07_CFG_STS CP",  
"MCTMONO01MOT03_CFG_STS CP",    
"MCTMONO01:STRIPE_REQUEST_CMD_CFG_STS CP"}
{"MCTVBM01:",
"MCTVBM01:PITCH_CFG_STS CP"}
{"MCTSLT01:",
"MCTSLT01:HSIZE_CFG_STS",
"MCTSLT01:VSIZE_CFG_STS",
"MCTSLT01:HCENTRE_CFG_STS".
"MCTSLT01:VCENTRE_CFG_STS"}
{"MCTSLT02:",
"MCTSLT02:HSIZE_CFG_STS",
"MCTSLT02:VSIZE_CFG_STS",
"MCTSLT02:HCENTRE_CFG_STS".
"MCTSLT02:VCENTRE_CFG_STS"}
{"MCTSLT03:",
"MCTSLT03:HSIZE_CFG_STS",
"MCTSLT03:VSIZE_CFG_STS",
"MCTSLT03:HCENTRE_CFG_STS".
"MCTSLT03:VCENTRE_CFG_STS"}
{"MCTALL:",
"MCTMONO01:CFG_STS",
"MCTVBM01:CFG_STS",
"MCTSLT01:CFG_STS",
"MCTSLT02:CFG_STS",
"MCTSLT03:CFG_STS",
"MCTCFG01:TABLE_SELECT_CFG_STS"}
}

#global file that triggers all PVs
#PV1-PVI - PV to trigger
#The template creates MCTCFG01:CONFIG_SAVE to start the chain
file "db/MCT_trigger_compare.template"
{
pattern
{PV1, PV2, PV3, PV4, PV5, PV6, PV7, PV8, PV9, PVA, PVB, PVC, PVD, PVE, PVF, PVG, PVH, PVI}
{"_MCTMONO01MOT06_CFG.PROC",
"_MCTMONO01MOT07_CFG.PROC",
"_MCTMONO01MOT03_CFG.PROC",
"_MCTVBM01:PITCH_CFG.PROC",
"_MCTSLT01:HSIZE_CFG.PROC",
"_MCTSLT01:VSIZE_CFG.PROC",
"_MCTSLT01:HCENTRE_CFG.PROC",
"_MCTSLT01:VCENTRE_CFG.PROC",
"_MCTSLT02:HSIZE_CFG.PROC",
"_MCTSLT02:VSIZE_CFG.PROC",
"_MCTSLT02:HCENTRE_CFG.PROC",
"_MCTSLT02:VCENTRE_CFG.PROC",
"_MCTSLT03:HSIZE_CFG.PROC",
"_MCTSLT03:VSIZE_CFG.PROC",
"_MCTSLT03:HCENTRE_CFG.PROC",
"_MCTSLT03:VCENTRE_CFG.PROC",
"_MCTCFG01:TABLE_SELECT_CFG.PROC",
"_MCTMONO01:STRIPE_REQUEST_CMD_CFG.PROC"} 
}

