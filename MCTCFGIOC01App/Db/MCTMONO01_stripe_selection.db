# Determine stripe validity (for UI)
record(calc, "$(P)MONO01_STRIPE_RUC_UI_ENABLE") {
    field(DESC, "DMM Ru/C stripe UI enable")
    field(INPA, "$(P)ENERGY_SP CPP")
    field(INPB, "$(P)MONO01_BANDWIDTH_CMD CPP")
    field(INPC, "23.0")
    field(INPD, "$(P)MONO01_STATUS_CMD CPP")
    field(CALC, "B=1&&A<=C&&D=1?1:0")
}

