record(ao, "$(P)DMM_OFFSET_SP") {
    field(DESC, "DMM offset setpoint")
    field(EGU,  "mm")
    field(PREC, "1")
    field(DRVL, "8.8")
    field(DRVH, "29.4")
    field(PINI, "YES")
}

record(ai, "$(P)DMM_OFFSET_PRESET1") {
    field(DESC, "DMM offset 1")
    field(VAL,  "14.0")
    field(EGU,  "mm")
    field(PREC, "1")
    field(PINI, "YES")

    info(autosaveFields, "VAL")
}

record(ai, "$(P)DMM_OFFSET_PRESET2") {
    field(DESC, "DMM offset 2")
    field(VAL,  "20.0")
    field(EGU,  "mm")
    field(PREC, "1")
    field(PINI, "YES")

    info(autosaveFields, "VAL")
}

record(ai, "$(P)DMM_OFFSET_PRESET3") {
    field(DESC, "DMM offset 3")
    field(VAL,  "23.5")
    field(EGU,  "mm")
    field(PREC, "1")
    field(PINI, "YES")

    info(autosaveFields, "VAL")
}

record(calcout, "$(P)DMM_OFFSET_SELECT") {
    field(DESC, "DMM offset selector")
    field(INPA, "$(P)DMM_OFFSET_PRESET1 CPP")
    field(INPB, "$(P)DMM_OFFSET_PRESET2 CPP")
    field(INPC, "$(P)DMM_OFFSET_PRESET3 CPP")
    field(INPD, "$(P)ENERGY_SP CPP")
    field(INPE, "$(P)MONO01_STRIPE_RUC_CMD CPP")
    field(INPF, "$(P)MONO01_STRIPE_VB4C_CMD CPP")
    field(INPG, "$(P)MONO01_STRIPE_WB4C_CMD CPP")
    field(CALC, "E||F?C:G?A:B")
    field(OUT,  "$(P)DMM_OFFSET_SP PP")
}
