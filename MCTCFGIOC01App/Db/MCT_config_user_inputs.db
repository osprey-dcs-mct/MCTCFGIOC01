}

record(mbbi, "$(P)MONO01_STRIPE_CMD") {
    field(DESC, "MCT mono stripe selection")
    field(ZRVL, "0")
    field(ZRST, "None")
    field(ZRSV, "MINOR")
    field(ONVL, "1")
    field(ONST, "Ru/C")
    field(TWVL, "2")
    field(TWST, "V/B4C")
    field(THVL, "3")
    field(THST, "W/B4C")
    field(FRVL, "4")
    field(FRST, "Multiple")
    field(FRSV, "MAJOR")
}

record(calcout, "$(P)MONO01_STRIPE_CALC_") {
    field(DESC, "Set mono stripe mbbi")
    field(INPA, "$(P)MONO01_STRIPE_RUC_CMD CPP")
    field(INPB, "$(P)MONO01_STRIPE_VB4C_CMD CPP")
    field(INPC, "$(P)MONO01_STRIPE_WB4C_CMD CPP")
    field(CALC, "A?1:B?2:C?3:0")
    field(OUT,  "$(P)MONO01_STRIPE_CMD PP")
    field(FLNK, "$(P)MONO01_STRIPE_ERR_CALC_")
}

record(calcout, "$(P)MONO01_STRIPE_ERR_CALC_") {
    field(DESC, "Set mono stripe mbbi error")
    field(INPA, "$(P)MONO01_STRIPE_RUC_CMD")
    field(INPB, "$(P)MONO01_STRIPE_VB4C_CMD")
    field(INPC, "$(P)MONO01_STRIPE_WB4C_CMD")
    field(CALC, "A+B+C>1")
    field(OCAL, "4")
    field(DOPT, "Use OCAL")
    field(OOPT, "When Non-zero")
}

