record(ao, "$(P)ENERGY_SP") {
    field(DESC, "MCT energy setpoint")
    field(EGU,  "keV")
    field(DRVL, "8.0")
    field(DRVH, "40.0")
    field(PREC, "2")
    field(SDIS, "$(P)MONO01_STATUS_CMD")
    field(DISV, "0")

    info(autosaveFields, "VAL")
}

record(bi, "$(P)MONO01_STATUS_CMD") {
    field(DESC, "MCT mono in-service selection")
    field(ZNAM, "Out")
    field(ONAM, "In")

    info(autosaveFields, "VAL")
}

