record(calcout, "$(P)MONO01_STRIPE_CALC_") {
    field(DESC, "Set mono stripe mbbi")
    field(INPA, "$(P)MONO01_STRIPE_RUC_CMD CPP")
    field(INPB, "$(P)MONO01_STRIPE_VB4C_CMD CPP")
    field(INPC, "$(P)MONO01_STRIPE_WB4C_CMD CPP")
    field(CALC, "A?1:B?2:C?3:0")
    field(OUT,  "$(P)MONO01_STRIPE_CMD PP")
    field(FLNK, "$(P)MONO01_STRIPE_ERR_CALC_")
}

