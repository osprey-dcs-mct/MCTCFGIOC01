# Sequence control and status PVs
record(bo, "$(P)CONFIG_START") {
    field(DESC, "MCT configuration start")
    field(ZNAM, "")
    field(ONAM, "Start")
    field(HIGH, "1.0")
}

record(bo, "$(P)CONFIG_ABORT") {
    field(DESC, "MCT configuration abort")
    field(ZNAM, "")
    field(ONAM, "Abort")
    field(HIGH, "1.0")
}

record(bo, "$(P)CONFIG_CONTINUE") {
    field(DESC, "MCT configuration continue")
    field(ZNAM, "")
    field(ONAM, "Continue")
    field(HIGH, "1.0")
}

record(bi, "$(P)CONFIG_CONTINUE_LED") {
    field(DESC, "MCT configuration continue LED")
    field(ZNAM, "")
    field(ONAM, "")
}

record(bi, "$(P)CONFIG_SEQ_MODE") {
    field(DESC, "MCT sequence mode")
    field(ZNAM, "Continuous")
    field(ONAM, "Single step")
    field(PINI, "YES")

    info(autosaveFields, "VAL")
}

record(mbbi, "$(P)CONFIG_STATUS") {
    field(DESC, "MCT configuration status")
    field(PINI, "YES")
    field(ZRVL, "0")
    field(ZRST, "Idle")
    field(ZRSV, "NO ALARM")
    field(ONVL, "1")
    field(ONST, "Running")
    field(ONSV, "NO ALARM")
    field(TWVL, "2")
    field(TWST, "Aborted")
    field(TWSV, "MINOR")
    field(THVL, "3")
    field(THST, "Error")
    field(THSV, "MAJOR")
}

record(mbbi, "$(P)CONFIG_STATE") {
    field(DESC, "MCT configuration state")
    field(ZRVL, "0")
    field(ZRST, "Idle")
    field(ONVL, "1")
    field(ONST, "Moving mono")
    field(TWVL, "2")
    field(TWST, "Moving mirror")
    field(THVL, "3")
    field(THST, "Moving A beam slits")
    field(FRVL, "4")
    field(FRST, "Moving B slits")
    field(FVVL, "5")
    field(FVST, "Moving C slits")
    field(SXVL, "6")
    field(SXST, "Moving table")
    field(SVVL, "7")
    field(SVST, "Opening shutters")
    field(EIVL, "8")
    field(EIST, "Optimising intensity")
}

record(stringin, "$(P)CONFIG_MESSAGE") {
    field(DESC, "MCT config. status message")
    field(PINI, "YES")
    field(VAL,  "Starting up")
}

record(stringin, "$(P)CONFIG_MESSAGE_PREV") {
    field(DESC, "MCT config. previous status message")
    field(PINI, "YES")
    field(VAL,  "---")
    field(INP,  "$(P)CONFIG_MESSAGE")
}

record(stringin, "$(P)ERROR_MESSAGE") {
    field(DESC, "MCT config. error message")
    field(PINI, "YES")
    field(VAL,  "No error")
}

record(bi, "$(P)SEQUENCE_HEARTBEAT") {
    field(DESC, "Sequence status PV")
}
